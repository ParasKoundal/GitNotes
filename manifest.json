{
  "manifest_version": 3,
  "name": "GitNotes",
  "version": "1.0",
  "description": "Context-aware notes for GitHub repositories.",
  "permissions": ["sidePanel", "tabs", "storage"],
  "host_permissions": ["https://github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open GitNotes"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
